{
  "name": "laura",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install && kysely-codegen",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start -b swc --type-check",
    "start:dev": "nest start -b swc --type-check --watch",
    "start:debug": "nest start -b swc --type-check --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "crud": "nest g resource",
    "type-check": "tsc --noemit",
    "db:sync": "kysely-codegen --dialect postgres",
    "db:migrate:ci": "ts-node src/common/migrate-latest.ts",
    "db:migrate": "ts-node src/common/migrate-latest.ts && pnpm db:sync",
    "db:migrate:create": "ts-node src/common/migrate-cli.ts create",
    "db:migrate:redo": "ts-node src/common/migrate-cli.ts redo && pnpm db:sync",
    "db:migrate:rollback": "ts-node src/common/migrate-cli.ts down-to && pnpm db:sync",
    "db:migrate:latest": "ts-node src/common/migrate-cli.ts latest && pnpm db:sync",
    "db:migrate:up": "ts-node src/common/migrate-cli.ts up && pnpm db:sync",
    "db:migrate:down": "ts-node src/common/migrate-cli.ts down && pnpm db:sync",
    "workflow:act": "gh act push --defaultbranch main"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@types/pg": "^8.11.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "kysely": "^0.27.3",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.27",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "kysely-codegen": "^0.15.0",
    "kysely-migration-cli": "^0.4.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
